/**
 * 登录相关接口
 */
import request from '@/utils/request'


export default {

    loginByUsername(param) {
        const data = {adminName:param.adminName,password:param.password}
        console.log(data);
        return request({
            url: '/v1/unsafe/login',
            method: 'post',
            data
        })
    },

    logout() {
        return request({
            url: '/auth/logout',
            method: 'post'
        })
    },

    getUserInfo(token) {
        return request({
            url: '/auth/info',
            method: 'get',
            params: { token }
        })
    },

}

